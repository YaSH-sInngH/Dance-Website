extends base.pug

block scripts
  script(src='/static/index.js')

block style
    style
      include ../static/style.css

block content 
        
    section#introsection
      div  Welcome to Splash Dance Academy
      div.small   “Dancing is silent poetry.” 
    
    section#objectivesection
      h2 Our Objective
      
      div.card 
        h3 Experts Attention
        div.card-box
          div.card-img
            img(src="/static/img/1 .png")
          div.card-content
